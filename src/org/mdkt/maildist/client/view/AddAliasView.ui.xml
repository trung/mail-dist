<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.error {
			color: red;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:cell>
				<g:HorizontalPanel>
					<g:Button ui:field="addButton">Save</g:Button>
					<g:Button ui:field="cancelButton">Cancel</g:Button>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell>
				<g:HorizontalPanel>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:Label>New email alias</g:Label>
					</g:cell>
					<g:cell>
						<g:TextBox ui:field="aliasName"></g:TextBox>
					</g:cell>
					<g:cell verticalAlignment="ALIGN_MIDDLE">
						<g:Label styleName="{style.error}" ui:field="errorAliasName"></g:Label>
					</g:cell>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 